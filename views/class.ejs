<%- include('header.ejs') -%>
<link rel="stylesheet" type="text/css" href="/css/class.css" />
<div class="title"> <%= classVar.name %> </div>
<h4>Perguntas</h2>
<form action="" method="POST">
    <input type="text" name="question" placeholder="Pergunta" required>
    <input type="text" name="answer" placeholder="Resposta" required>
    <button type="submit" name="submit">Adicionar</button>
</form>

<button onclick="window.location.href='/class/<%= classVar.idClass %>/play'">Jogar</button>
<table>
    <tr>
        <th>
            Pergunta
        </th>
        <th>
            Resposta
        </th>
        <th>
            Apagar
        </th>
    </tr>
    <br>
    <% for(var i=0; i<classVar.cards.length; i++) {%>
    <tr>
        <td style="padding-left: 15px;">
            <%= classVar.cards[i].question %>
        </td>
        <td>
            <%= classVar.cards[i].answer %>
        </td>
        <td>
            <a href="/deleteCard/<%= classVar.cards[i].idCard %>"><div class="button">❌</div></a>
        </td>
    </tr>
    <% } %>
</table>

<%- include('footer.ejs') -%> 
